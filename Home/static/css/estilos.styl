		z-index 1
	#videos
		position absolute
		top 0
		left 0
		background green
		width: 500px
		height 500px
		z-index 0






a 
	color naranja
body
	background: #333
footer
	position relative
	top 50px
	color blanco
	.rackcode
		height 100%
		width: 100%
		img, span
			display inline-block
			vertical-align middle
		img 
			height 100px
			width: 100px
		span
			height 100%
			text-shadow: 1px 2px 1px negro
			color blanco
.modulos
	top 50px
	text-shadow: 1px 2px 1px gris_oscuro
	margin: 0
	background: gris_oscuro
	color #FFF
	padding: 1em 0
	text-align center
	position relative
	a 
		text-decoration none
	.modulo-contenido
		background: gris_oscuro
		color #FFF
		padding: 0
		a 
			text-decoration none
			color blanco
		.tema 
			text-align left
			margin: 0
			list-style: none
			font-size: 1em
			padding: 0
			padding 0
			position relative
			&:hover
				background: negro
			
			.icono
				margin: 0 1em
				position absolute
				top 0.5em
				right 0
				height 100%
				font-size 2em
				
			.tema-titulo
				margin: 0 3em
				span
					text-align left
					color blanco
				
			.tema-tipo
				margin 0
				padding: 0.5em 3em
				
	.modulo
		background: gris
		display block
		list-style: none
		margin: 0
		position relative
