			background: naranja
			color naranja
			margin: 0
			position relative
			display block
			width: 50%
		span
			font-size: 1.2em
			display block
			text-align center
			color naranja
		.title
			padding: 1em 0
			width: 70%
			background: azul_oscuro
			color blanco
			margin: 0
			//border-top 1px solid blanco
			//border-bottom 1px solid blanco
		.info
			color blanco
			font-size 0.9em
		.descripcion
			color blanco
			margin: 0

.single-curso
	background: #333
	display block
	position relative
	top 50px
	text-align center
	padding: 4em 0
	span
		position relative
		z-index 2
		color blanco
	.single-title
		text-shadow: 1px 2px 1px negro
		margin: 1em
		font-size 1.2em
		z-index 2
		position relative
		color blanco
	.single-subtitle
		font-size 1em
		margin: 1em
	.single-imagen
		opacity 0.5
		position absolute
		top 0
		width: 100%
		height 100%
		img
			height 100%
			width: 100%
			display block
.single-detalle
	position relative
	top 50px
	display block
	.single-sec
		background: #EEE
		margin: 0
		padding: 1em 0
		display block
		text-align center
		.especificacion
			display block
			position relative
			.nivel
				position relative
				width: 50%
				text-align right
				margin: 0 
				font-size 1.2em
				p 
					text-align right
					margin: 0 1em
			.detalle
				position absolute
				top 0
				right 0
				width: 50%
				margin: 0 
				font-size 1.2em
				p 
					text-align left
					margin: 0 1em 
				
				
		.boton 
			display block
			margin: 1.5em 0
			width: 100%
			text-align center
			a 
				margin: 1em
				padding: 1em
				background: azul_oscuro
				color blanco
				text-decoration none
				box-shadow: 2px 1px 1px #333
		
				&:hover
					background naranja
					colo blanco
		.titulo
			text-shadow 0 0 0 transparent
			margin: 1em 0
			padding: 0
			text-align center
		.social
			text-align center
			margin: 0 1em 
			font-size 2em
		.single-texto
			text-align left
			margin: 0 1em
	

.tag 
	background azul_oscuro
	padding: 0 1em
	border-radius 5%
	a 
		text-decoration none
		color blanco
		
		
.titulo 
	font-size: 1.3em
	font-weight bold
	text-shadow: 1px 2px 1px negro
.subtitulo
	font-size: 1.1em
	font-weight normal
	text-shadow: 1px 2px 1px negro
.texto-normal
	font-size: 1em 
	font-weight normal
	font-style: italic

#contactanos
	padding 2em 0
	position relative
	top 50px
	background: azul_oscuro
	display block
	text-align center
	color blanco
	h3
		margin: 0
		font-size: 2em
	input 
		box-shadow: 2px 1px 1px #333
		padding 1em
		width: 50%
		&:focus
			border 4px solid verde
	button
		box-shadow: 2px 1px 1px #333
		padding: 1em 2em
		background: blanco
		border none
		border-radius 4%
		color azul_oscuro
		&:hover
			color azul_oscuro
			background: blanco
			border 1px solid blanco
#cursos
	position relative
	top 50px
	background: #333
	color blanco
	display block
	text-align center
	#title-cursos
		text-shadow: 1px 1px 1px azul_oscuro
		font-size: 2em
		margin: 0
		text-align center
	.curso
		color blanco
		text-align center
		position: relative
		display block
		.curso-img
			position relative
			margin: 0
			height 100%
			width: 100%
			img 
				height 100%
				width: 100%
		.curso-info
			position relative
			right 0
			top 0
			width: 100%
			.acceso
				background naranja
				border 1px solid blanco
				margin: 1em 0
				text-shadow: 1px 2px 1px negro
			.nivel 
				margin: 1em 0
			.acceso , nivel
				display inline-block
				padding 0 1em
			.detalles
				display block
				margin: 0.5em 0
			h5
				text-align center
				margin: 0
				display block
				.autor
					display block
					margin: 0 1em
					text-align center
				.duracion
					display block
					margin: 0 1em
				.comentarios
					display block
					margin: 0 1em
					
					
			h4
				font-size: 1.4em
				margin: 0
				padding: 1em 0
			p 
				text-align left
				margin: 0 1em
			.tags
				display block
				padding: 1em 0
			

#header
	background: #333
	//background: url('../imagenes/Frontend.jpg') 
	//background-repeat: no-repeat;
	//background-position: center;
	//background-size: cover;
	padding: 5em 0 
	text-align center
	color blanco
	position relative
	top 50px
	.fondo 
		opacity 0.8
		position absolute
		top 0
		height 100%
		width: 100%
		img 
			opacity 0.8
			height 100%
			display block
			width: 100%
	figure
		position relative
		height: 200px
		margin: 0
		img 
			height 200px
			width: 200px
	h1, h2
		text-shadow: 1px 2px 1px negro
		position relative
		margin:  0
	h2 
		margin: 1em auto
		font-weight normal
	.comenzar
		background rgba(0, 0, 0, .7)
		color blanco
		position relative
		h3
		h4
			padding: 0.2em 0
			margin: 0
			display block
		a 
			display block
			margin: 0 30%
			padding: 1em 0
			text-decoration none
			background: azul_oscuro
			color blanco
			&:hover
				background: naranja
				color blanco
		.tags
			padding: 1em 0
			display block
			ul 
				display block
				padding: 0
				margin: 0
				.tag-1
					border-left 1px solid blanco
				li 
					list-style: none
					display inline-block
					border 1px solid blanco
					border-left 1px solid blanco
					a 
						background: transparent
						padding: 1em
						margin: 0
						display inline-block
						&:hover
							background: blanco
							color azul
						
	.intro
		position relative
		text-align center
		display block
		background rgba(0, 0, 0, .3)
		span 
			display block
			font-size: 2.5em
			color blanco
		h3
			margin: 0
			display block
			a 
				text-decoration none
				
		
	
	
.links
	background rgba(0, 0, 0, .2)
	position fixed
	top 0
	right 0
	z-index: 2
	left: 0
	a
		text-shadow: 1px 2px 1px negro
		text-decoration: none
		text-align: center
		height: 100%
		color blanco
		float right
		display inline-block
		box-sizing border-box
		padding: 1em
		&:hover
			background azul_oscuro
	.enlace a 
		margin 40% auto	
		width: 70%
	.logo
		float left
		&:hover
			background transparent
	.login
		background: naranja
		opacity 1
		
.clearfix
	clear both